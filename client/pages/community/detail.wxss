/* pages/community/detail.wxss */

.description {
  font-family: PingFangHK-Regular;
  font-size: 17px;
  color: #969696;
  letter-spacing: 0.57px;
  line-height: 20px;
  text-align: left;
  margin: 10px 20px;
}

.audio {
  background: #fff;
  border-radius: 13px;
  height: 30px;
  margin-top: 0px;
  margin-right: 15px;
  display: inline-flex;
  float: right;
  width: 75%;
  justify-content: flex-end;
  align-items: center;
}

.audio-icon {
  /*float:right;*/
  height: 25px;
  width: 25px;
  align-items: center;
  padding-right: 10px;
}

.tags {
  text-align: right;
  margin-right: 15px;
}

.tag {
  background: #d7d7d7;
  border-radius: 10px;
  height: 25px;
  font-family: PingFangHK-Regular;
  font-size: 15px;
  color: #fff;
  letter-spacing: 0;
  text-align: left;
  margin: 4px;
  display: inline;
  padding: 1px 6px;
}

.time {
  display: inline;
  float: left;
  font-family: PingFangHK-Regular;
  font-size: 13px;
  color: #999;
  letter-spacing: 0;
  text-align: left;
  height: 30px;
  margin-top: 5px;
  margin-left: 16px;
  width: 15%;
}

.holder {
  overflow: hidden;
}

.btns {
  float: right;
  font-family: PingFangHK-Thin;
  font-size: 10px;
  color: #999;
  letter-spacing: 0.37px;
  text-align: left;
  margin-top: 10px;
  margin-right: 20px;
}

.btn-group {
  display: inline-flex;
  align-items: center;
  margin-right: 8px;
}

.icon-sm {
  width: 20px;
  height: 20px;
}

.avatar-big {
  width: 57px;
  height: 57px;
}

.btn-num {
  height: 20px;
  line-height: 20px;
}

.info-card {
  border-radius: 14px;
  position: relative;
  overflow: hidden;
  padding-top: 20px;
  margin-left: 30px;
  margin-right: 30px;
}

.info-detail-group {
  float: left;
}

.avatar {
  float: left;
  margin: 5px;
}

.share-btn {
  float: right;
  padding-top: 25px;
  padding-right: 15px;
}

.info-group {
  overflow: hidden;
  display: inline-flex;
  align-items: center;
  width: 80%;
  padding-left: 10px;
}

.info-name {
  font-family: PingFangHK-Medium;
  font-size: 20px;
  color: #999;
  letter-spacing: 0.42px;
  text-align: left;
}

.info-date {
  font-family: PingFangHK-Regular;
  font-size: 11px;
  color: #b4b4b4;
  letter-spacing: 0;
  text-align: left;
}

.location {
  font-family: PingFangHK-Regular;
  font-size: 12px;
  color: #b4b4b4;
  letter-spacing: 0;
  text-align: left;
  padding-left: 20px;
  float: left;
  height: 35px;
}

.info-card-out {
  position: relative;
}

.background {
  position: absolute;
  left: 0;
  /*right: 0;*/
  top: 0;
  /*bottom: 0;*/
  opacity: 0.1;
  height: 100%;
  width: 100%;
  border-radius: 14px;
}
