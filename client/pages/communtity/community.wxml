<!--pages/communtity/community.wxml-->

<view class="timeline">
  <view wx:for="{{feeds}}">
    <view class="info" ontap="gotoDetail" id="detail-id">
      <view class="holder">
        <view class="time">
          {{item.audio.duration}}"
        </view>
        <!--当点击的是当前正在播放的feed，-->
        <view class="audio">
          <image src="/image/icon-sound.svg" class="audio-icon"></image>
        </view>
      </view>
      <view class="description">
        <text class="content">{{item.audio.intro}}</text>
      </view>

      <view class="tags">
        <view wx:for="{{item.tags}}" class="tag">
          <text class="tag-text">{{item.text}}</text>
        </view>
      </view>

      <view class="holder">
        <view class="author">
          <text>{{item.user.name}}</text>
        </view>

        <view class="btns">
          <view class="btn-group">
            <image wx:if="{{item.audio.isliked}}" src="/image/icon-like.svg" class="icon-sm btn-up">1</image>
            <image wx:else src="/image/icon-like.svg" class="icon-sm btn-up">1</image>
            <view class="btn-num">{{item.audio.like_num}}</view>
          </view>
          <view class="btn-group">
            <image src="/image/icon-comments.svg" class="icon-sm btn-up">btns</image>
            <view class="btn-num">{{item.audio.comment_num}}</view>
          </view>
          <view class="btn-group">
            <image wx:if="{{item.audio.iscollected}}" src="/image/icon-collect.svg" class="icon-sm btn-up">1</image>
            <image wx:else src="/image/icon-collect.svg" class="icon-sm btn-up">2</image>
            <!-- <view class="btn-num"> 10</view> -->
          </view>
        </view>
      </view>
    </view>
  </view>
</view>