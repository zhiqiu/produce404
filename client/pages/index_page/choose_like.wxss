/* pages/record/record.wxss */

.background{
	background-image: url(http://cos.ladyrick.com/background.png);
	position: absolute;
	top: 0;
	bottom: 0;
	left: 0;
	right: 0;
	background-repeat: repeat-y;
	background-size: 100% auto;
}

.label{
	width: 50%;
	display: inline-block;
	margin-top: 30px;

	font-family:PingFangSC-Regular;
	font-size:14px;
	color:#666666;
	letter-spacing:0.51px;
	text-align:center;
}

.labels{
	padding: 30px;
	padding-top: 60px;
}


.show{
	background:#fff;
border-radius:14px;
margin-left:30px;
margin-right:30px;
margin-top:65px;
margin-bottom:150px;
box-shadow:5px 5px 0px #ebcc3f;
overflow:hidden;
position: absolute;
top: 0;
bottom: 0;
left: 0;
right: 0;
display:flex;
justify-content:center;
flex-wrap:wrap;
opacity: 0.9;
}


.text{
	background:#ffffff;
border-radius:14px;
width:268px;
height:129px;
flex-wrap:wrap;
padding: 5px;
font-family:PingFangHK-Regular;
font-size:15px;
color:#999999;
letter-spacing:0.35px;
text-align:left;

}

.submit{
	background:#ffdd40;
	margin-top:160px;
border-radius:14px;
width:143px;
height:40px;
text-align: center;
font-family:PingFangHK-Regular;
font-size:15px;
color:#333333;
letter-spacing:0.32px;
line-height: 40px;
}

.holder{
	width: 100%;
	height: 30px;
}
.pos{
	float: left;
	background:#d2d2d2;
border-radius:45px;
width:89px;
height:26px;
font-family:PingFangHK-Regular;
font-size:14px;
color:#ffffff;
letter-spacing:0.27px;
text-align:center;
line-height: 26px;
margin: 20px;
}
.tag{
	float: right;
	background:#ffffff;
border-radius:10px;
width:73px;
height:26px;
font-family:PingFangHK-Regular;
font-size:14px;
color:#999999;
letter-spacing:0.27px;
text-align:center;
line-height: 26px;
margin: 20px;
}
