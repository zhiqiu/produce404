<!--pages/mine/mine.wxml-->
<view class="mine">
  <view class="info-card-out">
    <!-- <image class="background" src="https://enj0.com/example-background2.png" width="100%" height="100%">
    </image> -->

    <view class="info-card">
      <view class="info-group">
        <view class="avatar">
          <image src="{{user.img}}" class="avatar-big"></image>
        </view>

        <view class="info-detail-group">
          <view class="info-name">
            <text>{{user.name}}</text>
          </view>
        </view>
      </view>
      <view class="some-btn">
        <view class="btn" ontap="gotoMyMsg">我的消息</view>
        <view class="btn" ontap="gotoMyColl">我的收藏</view>
      </view>
    </view>
  </view>
  <view class="holder">
  <view class="cont1" style="background: {{status === 0?'#ffdd40':'#fff'}};" ontap="gotoMyFeed">
    <view class="conttext">
      声音日迹
    </view>
  </view>
  <view class="cont2" ontap="gotoMyMedal"  style="background: {{status === 1?'#ffdd40':'#fff'}};">
    <view class="conttext">
      我的勋章
    </view>
  </view>
  </view>
  <view class="timeline" wx:if="{{status === 0}}">
      <view wx:for="{{feeds}}">
      <view class="info" ontap="gotoDetail" id="{{item.audio.audio_id}}">
        <view class="holder">
          <view class="time">
            {{item.audio.duration}}
          </view>
          <!--当点击的是当前正在播放的feed，-->
          <view class="audio">
            <image src="/image/icon-sound.svg" class="audio-icon"></image>
          </view>
        </view>

        <view class="description">
          <text class="content">{{item.audio.intro}}</text>
        </view>

        <view class="tags">
          <view wx:for="{{item.tags}}">
            <view class="tag">
              <text class="tag-text">#{{item.tagname}}</text>
            </view>
          </view>
        </view>

        <view class="holder">
          <view class="author">
            <text>{{item.user.name}}</text>
          </view>

          <view class="btns">
            <view class="btn-group">
              <image wx:if="{{item.audio.isliked}}" src="/image/icon-like.svg" class="icon-sm btn-up">btns</image>
              <image wx:else src="/image/icon-like.svg" class="icon-sm btn-up">btns</image>
              <view class="btn-num">{{item.like_num}}</view>
            </view>
            <view class="btn-group">
              <image src="/image/icon-comments.svg" class="icon-sm btn-up">btns</image>
              <view class="btn-num">{{item.comment_num}}</view>
            </view>
            <view class="btn-group">
              <image src="/image/icon-collect.svg" class="icon-sm btn-up">btns</image>
              <!-- <view class="btn-num"> 10</view> -->
            </view>
          </view>
        </view>
      </view>
    </view>
  </view>
  <view class="medals" wx:if="{{status === 1}}">
    <view class="medal">
      <image class="medal-img" mode="widthFix" src="http://cos.ladyrick.com/medal1.png"></image>
      <text class="medal-text">获得     /30个赞</text>
    </view>
    <view class="medal">
      <image class="medal-img medal-not" mode="widthFix"  src="http://cos.ladyrick.com/medal1.png"></image>
      <text class="medal-text">获得     /30个赞</text>
    </view>
    <view class="medal">
      <image class="medal-img" mode="widthFix" src="http://cos.ladyrick.com/medal2.png"></image>
      <text class="medal-text">获得     /30个赞</text>
    </view>
    <view class="medal">
      <image class="medal-img medal-not" mode="widthFix" src="http://cos.ladyrick.com/medal2.png"></image>
      <text class="medal-text">获得     /30个赞</text>
    </view>

  </view>
</view>