/* pages/mine/mine.wxss */

.mine {
  border: 1px solid #ffdd40;
}

.btn_1 {
  background: #ffdd40;
  border-radius: 14px;
  width: 95px;
  height: 28px;
  margin: 15px 30px auto auto;
  overflow: hidden;
}

.my_msg1 {
  font-family: PingFangHK-Regular;
  font-size: 12px;
  color: #999;
  letter-spacing: 0.32px;
  text-align: center;
  margin: 6px auto auto auto;
}

.info-group {
  overflow: hidden;
  display: inline-flex;
  align-items: center;
  width: 80%;
  padding-left: 10px;
  margin: 10px auto auto 10px;
}

.avatar {
  float: left;
  margin: 0px auto auto 22px;
}

.avatar-big {
  width: 57px;
  height: 57px;
  margin: 0px auto auto 0px;
}

.info-name {
  font-family: PingFangHK-Medium;
  font-size: 18px;
  color: #999;
  letter-spacing: 0.42px;
  
}
