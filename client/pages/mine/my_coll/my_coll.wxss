/* pages/community/community.wxss */

page{
	background: #FFDD40;
}
.timeline{
	/* Rectangle: */
border: 1px solid #FFDD40;
padding-top: 80px;
}
.add-btn{
	background:white;
	border-radius:14px;
	width:126px;
	height:42px;

	font-family:PingFangSC-Regular;
	font-size:14px;
	color:#666666;
	letter-spacing:1.3px;
	text-align:center;
	line-height: 42px;

	position: fixed;
	right: 20px;
	top: 30px;
	z-index: 1000;

  box-shadow:5px 5px 0px #ebcc3f;
}
.background{
	background-image: url(http://produce404-1257046746.cos.ap-guangzhou.myqcloud.com/background.png);
	background-repeat: repeat-y;
	background-size: 100% auto;
}
.background-inner{
	position: absolute;
  left: 0;
  /*right: 0;*/
  top: 0;
  /*bottom: 0;*/
  opacity: 0.3;
  height: 100%;
  width: 100%;
  border-radius: 14px;
}
.info{
border-radius:14px;
margin-left:30px;
margin-right:30px;
margin-top:15px;
margin-bottom:30px;
box-shadow:5px 5px 0px #ebcc3f;
overflow:hidden;
position: relative;
background: white;
}

.description{
	font-family:PingFangHK-Regular;
font-size:17px;
color:#333333;
letter-spacing:0.57px;
line-height:20px;
text-align:center;
margin:10px 20px;

}
/* */
.audio{
	background:white;
border-radius:13px;
height:30px;
margin-top:10px;
margin-right:15px;
display:inline-flex;
float:right;
width:75%;
justify-content:flex-end;
align-items:center;
position: absolute;
z-index: 999;
}
.audio-icon{
	/*float:right;*/
	height:25px;
	width: 25px;
	align-items: center;
	padding-right:10px;
}
.tags{
	text-align:right;
margin-right:15px;
}

.tag{
	background:#d7d7d7;
border-radius:10px;
height:25px;
font-family:PingFangHK-Regular;
font-size:15px;
color:#ffffff;
letter-spacing:0;
text-align:left;
margin:4px;
display:inline;
padding:1px 6px;

}

.time{
	display: inline;
	float:left;
	font-family:PingFangHK-Regular;
font-size:13px;
color:#999999;
letter-spacing:0;
text-align:left;
height:30px;
margin-top:15px;
margin-left:16px;
width:15%;
}

.author{
	font-family:PingFangHK-Regular;
font-size:16px;
color:#666666;
letter-spacing:0;
text-align:left;
padding-left:20px;
float:left;
height:35px;
}

.holder{
	overflow: hidden;
}
.btns{
	float:right;
	font-family:PingFangHK-Thin;
font-size:10px;
color:#999999;
letter-spacing:0.37px;
text-align:left;
margin-top:5px;
margin-right:20px;

}
.btn-group{
	display: inline-flex;
	align-items:center;
	margin-right:8px;
}
.icon-sm{
	width: 20px;
	height: 20px;
}

.btn-num{
	height: 20px;
	line-height:20px;

}
