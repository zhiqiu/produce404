/* pages/record/record.wxss */

.background {
  background-image: url(http://produce404-1257046746.cos.ap-guangzhou.myqcloud.com/background.png);
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background-repeat: repeat-y;
  background-size: 100% auto;
}

.record {
  border-radius: 14px;
  margin-left: 30px;
  margin-right: 30px;
  margin-top: 15px;
  margin-bottom: 30px;
  box-shadow: 5px 5px 0px #ebcc3f;
  overflow: hidden;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
}

.cir {
  background: #fff;
  width: 126px;
  height: 126px;
  border-radius: 100%;
  box-shadow: 5px 5px 0px #ebcc3f;
  margin-top: 40px;
  overflow: hidden;
}

.icon-mac {
  width: 100%;
  height: 100%;
}

.text {
  background: #fff;
  border-radius: 14px;
  width: 268px;
  height: 129px;
  flex-wrap: wrap;
  padding: 5px;
  font-family: PingFangHK-Regular;
  font-size: 15px;
  color: #999;
  letter-spacing: 0.35px;
  text-align: left;
}

.submit {
  background: #fff;
  border-radius: 14px;
  width: 143px;
  height: 40px;
  text-align: center;
  font-family: PingFangHK-Regular;
  font-size: 15px;
  color: #333;
  letter-spacing: 0.32px;
  line-height: 40px;
}

.holder {
  width: 100%;
  height: 30px;
}

.pos {
  float: left;
  background: #d2d2d2;
  border-radius: 45px;
  width: 100px;
  height: 26px;
  font-family: PingFangHK-Regular;
  font-size: 14px;
  color: #fff;
  letter-spacing: 0.27px;
  text-align: center;
  line-height: 26px;
  margin: 20px;
}

.tag {
  float: right;
  background: #fff;
  border-radius: 10px;
  width: 73px;
  height: 26px;
  font-family: PingFangHK-Regular;
  font-size: 14px;
  color: #999;
  letter-spacing: 0.27px;
  text-align: center;
  line-height: 26px;
  margin: 20px;
}
